{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "lib": ["dom", "es2019"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "buttons/*": ["scripts/buttons/*"],
      "cardHolders/*": ["scripts/cardHolders/*"],
      "constants/*": ["scripts/constants/*"],
      "animate": ["scripts/animate"],
      "blackjack": ["scripts/blackjack"],
      "card": ["scripts/card"],
      "popup": ["scripts/popup"]
    }
  },
  "include": ["src/setupTests.ts"]
}
