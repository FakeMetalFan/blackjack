{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "styles": [
        "styles/*"
      ],
      "buttons/*": [
        "scripts/buttons/*"
      ],
      "buttons": [
        "scripts/buttons/index"
      ],
      "card-holders/*": [
        "scripts/card-holders/*"
      ],
      "constants/*": [
        "scripts/constants/*"
      ],
      "data-structures/*": [
        "scripts/data-structures/*"
      ],
      "utils/*": [
        "scripts/utils/*"
      ]
    }
  }
}
